{
  "manifest_version": 2,
  "name": "VideoNote",
  "version": "VERSION_TAG",
  "description": "See https://github.com/yoga1290/videonote#readme",
  "browser_specific_settings": {
      "gecko": {
        "data_collection_permissions": {
          "required": ["none"]
        }
      }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?*v=*", "https://youtube.com/watch?*v=*"],
      "js": ["base-bundle.js", "youtube.js"]
    }, {
      "matches": ["https://m.youtube.com/watch?v=*"],
      "js": ["base-bundle.js", "youtube-mobile.js"]
    }, {
      "matches": ["https://vkvideo.ru/video*"],
      "js": ["base-bundle.js", "vkvideo.js"]
    }, {
      "matches": ["https://m.vkvideo.ru/video*"],
      "js": ["base-bundle.js", "vkvideo-mobile.js"]
    }, {
      "matches": ["https://*.bilibili.tv/*/video/*", "https://*.bilibili.tv/*/play/*"],
      "js": ["base-bundle.js", "bilibili.js"]
    }
    
  ],

  "permissions": [
    "storage"
  ]
  
}
